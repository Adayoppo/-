/*顶部搜索*/
.top {
    width: 750rpm;
    height: 90rpx;
    background: red;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.search-box {
    background: #fff;
    width: 650rpx;
    height: 60rpx;
    border-radius: 50rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 20rpx;
}

.sousuo-ico {
    font-size: 40rpx;
    margin-left: -20rpx;
}

.search {
    width: 550rpx;
    height: 50rpx;
    margin-left: 10rpx;
}

.zuji-ico {
    font-size: 45rpx;
    margin-right: 20rpx;
    transform: rotate(25deg) translateY(-5rpx);
    color: white;
}

/*顶部导航*/
.top1 {
    background: white;
    width: 750rpx;
    height: 60rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10rpx;
    border-bottom: 1rpx solid#ccc;
}

.top1 view {
    padding: 10rpx;
}

.column {
    width: 530rpx;
    height: 40rpx;
}

.column view {
    padding: 15rpx;
    display: inline;
}

.ai-arrow-down {
    margin-right: 20rpx;
    color: #ccc;
}

.top1 .choiceness {
    position: relative;
    color: red;
    border-bottom: 5rpx red solid;
}

.top1 .choiceness:before {
    content: '';
    display: block;
    right: -13rpx;
    top: 10rpx;
    width: 2rpx;
    height: 50rpx;
    background: #ccc;
    position: absolute;
}

/*轮播图*/
.carousel {
    width: 750rpx;
    height: 350rpx;
}

.carousel swiper, .carousel image {
    width: 750rpx;
    height: 100%;
}

/*分类*/
.classification {
    width: 750rpx;
    height: 200rpx;
    background: white;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.classification image {
    width: 120rpx;
    height: 120rpx;
}

.classification > view {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    width: 130rpx;
    height: 100%;
}

/*推送*/
.push {
    width: 750rpx;
    height: 700rpx;
    background: url("https://img.alicdn.com/imgextra/i1/2053469401/O1CN01Mrwm8l2JJhxstUglC_!!2053469401.png");
    background-size: 100% 100%;
}

.push .push-top {
    width: 750rpx;
    height: 190rpx;
}

.push .push-body {
    display: flex;
    flex-wrap: wrap;
    padding: 15rpx;
}

.push .push-body navigator {
    width: 360rpx;
    height: 160rpx;
}

/*大家都在领*/
.draw {
    width: 750rpx;
    height: 500rpx;
    display: flex;
    background: white;
    flex-wrap: wrap;
    flex-direction: column;
}

.draw .draw-top {
    padding: 20rpx;
    background: white;
    width: 750rpx;
    height: 50rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.draw .draw-top .draw-top1 {
    border-left: 8rpx solid red;
    padding-left: 10rpx;
}

.draw .draw-top .draw-top-2 {
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.draw .draw-top .draw-top-2 .draw-top-21 {
    color: red;
    font-size: 34rpx;

}

.draw .draw-top .draw-top-2 .draw-top-22 {
    color: #ccc;
    font-size: 26rpx;
    margin-right: 40rpx;
    margin-left: 10rpx;
}

.draw .draw-button {
    width: 750rpx;
    height: 360rpx;
    padding: 10rpx;
    display: flex;
}

.draw-button .draw-button-box {
    width: 280rpx;
    height: 350rpx;
    background: white;
    border-top-right-radius: 15rpx;
    border-top-left-radius: 15rpx;
    box-shadow: 0 0 5rpx#888888;
    padding: 10rpx;
    display: inline-block;
    margin: 5rpx 20rpx auto 5rpx;
}

.draw-button-box .draw-button-img image {
    width: 100%;
    height: 250rpx;
}

.draw-button-box .draw-button-ab {
    display: flex;
    justify-content: space-around;
    height: 40rpx;
    background: #FD72C7;
    font-size: 24rpx;
    color: white;
    align-items: center;
    margin-top: -50rpx;
    position: relative;
    border-radius: 10rpx;
}

.draw-button-box .draw-button-ab .draw-button-ab-last {
    position: relative;
}

.draw-button-box .draw-button-ab .draw-button-ab-last:before {
    position: absolute;
    content: '';
    width: 1rpx;
    height: 24rpx;
    background: #fff;
    left: -10rpx;
    top: 5rpx;
}

.draw-button-box .draw-button-title {
    height: 50rpx;
    line-height: 50rpx;
    overflow: hidden;
    font-weight: normal;
}

.draw-button-box .draw-button-price {
    display: flex;
    justify-content: left;
    align-items: center;
    height: 60rpx;
}

.draw-button-box .draw-button-price > view {
    display: flex;
    align-items: center;
    justify-content: center;
}

.draw-button-box .draw-button-price > view:first-child {
    color: red;
}

.draw-button-box .draw-button-price > view:last-child {
    text-decoration: line-through;
    color: #ccc;
    margin-left: 10rpx;
}

.draw-button-box .draw-button-price > view:first-child > view:first-child {
    font-size: 24rpx;
}

/*领券直播*/
.draw-top-2 .draw-top-20 {
    font-size: 26rpx;
    margin-right: 10rpx;
}

.draw2 {
    background: yellow;
    height: 84rpx;
}

.coupon {
    background: white;
    border-bottom: 1rpx solid#ccc;
    width: 750rpx;
    height: 250rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15rpx;
}

.coupon .coupon-commodity {
    width: 252rpx;
    height: 252rpx;
}

.coupon .describe {
    width: 430rpx;
    height: 252rpx;
    margin-right: 30rpx;
}

.coupon .commodity {
    width: 252rpx;
    height: 252rpx;
    border-radius: 10rpx;
}

.describe .title {
    width: 100%;
    height: 126rpx;
}

.describe .title view {
    display: inline;
    width: 100%;
}

.describe .title view:first-child {
    color: red;
}

.describe .price {
    display: flex;
    width: 100%;
    height: 50rpx;
    /*line-height: 50rpx;*/
    margin-top: 20rpx;
    justify-content: space-between;
    align-items: center;
}

.describe .price .price1 {
    display: flex;
    color: #ccc;
    font-size: 24rpx;
}

.price .price1 .stress {
    color: red;
}

.describe .coupon1 {
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #FC3F78;
    font-size: 30rpx;
}

.coupon1 .coupon-discount {
    display: flex;
    justify-content: center;
    align-items: center;
    border: 1rpx solid red;
    padding: 5rpx 30rpx;
}

.coupon1 .coupon-discount1 {
    display: flex;
}

.coupon-discount1 .stress {
    font-size: 36rpx;
    margin-top: -5rpx;
}

/*返回顶部*/
.down {
    width: 70rpx;
    height: 70rpx;
    line-height: 70rpx;
    transform: rotate(180deg);
    border-radius: 50%;
    background: #5C5C5C;
    color: whitesmoke;
    text-align: center;
    position: fixed;
    right: 20rpx;
    bottom: 20rpx;
}